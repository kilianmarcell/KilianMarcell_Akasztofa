<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gombMinusz"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@null"
            android:background="@drawable/buttonbackround"
            android:textSize="20dp"
            android:text="-"/>

        <TextView
            android:id="@+id/tippelBetu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="40dp"
            android:layout_marginHorizontal="20dp"
            android:text="A"/>

        <Button
            android:id="@+id/gombPlusz"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@null"
            android:background="@drawable/buttonbackround"
            android:textSize="20dp"
            android:text="+"/>

    </LinearLayout>

    <Button
        android:id="@+id/gombTippel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:text="Tippel"/>

    <ImageView
        android:id="@+id/kepAkasztofa"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/akasztofa13"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/kitalalSzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginBottom="20dp"
            android:text="_ _ _ _ _"/>

    </LinearLayout>
</LinearLayout>